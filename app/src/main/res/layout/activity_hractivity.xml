<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".HRActivity">
    <!-- Upper Light Part -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/upperLightPart"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#1B1A1B"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/HRheading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:text="HR Interview Questions"
            android:textColor="@color/white"
            android:paddingTop="20dp"
            android:textSize="40dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.3" />

        <TextView
            android:id="@+id/HRsubHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:text="07 chapters"
            android:textColor="@color/white"
            android:paddingTop="20dp"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/HRheading"
            app:layout_constraintVertical_bias="0.0" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/HRIcon"
            android:layout_width="67dp"
            android:layout_height="67dp"
            android:layout_marginEnd="36dp"
            android:layout_marginBottom="60dp"
            android:background="@drawable/rounded_search_view"
            android:backgroundTint="#FAF6F6"
            android:padding="3dp"
            android:src="@drawable/hr1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Lower Darker Part -->
    <TextView
        android:id="@+id/allChaptersHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All chapters"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/upperLightPart"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingStart="16dp" />

    <ExpandableListView
        android:id="@+id/lvHR"
        android:layout_width="384dp"
        android:layout_height="427dp"
        android:layout_marginTop="10dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="10dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/upperLightPart"
        app:layout_constraintVertical_bias="0.885" />
</androidx.constraintlayout.widget.ConstraintLayout>