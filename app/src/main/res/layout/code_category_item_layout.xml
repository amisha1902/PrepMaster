<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



        <TextView
            android:id="@+id/tvLanguageName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvLanguageChapters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10 Chapters"
            android:textSize="14sp" />


    <!-- Arrow icon at the rightmost corner -->
    <ImageView
        android:id="@+id/imgLanguageIcon"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginStart="300dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/arr" />
    <LinearLayout
        android:id="@+id/subtopicsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"/>
</LinearLayout>